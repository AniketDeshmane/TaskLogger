<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Dark Mode Color Palette -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#4A90E2"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="#E91E63"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#FF9800"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="CardBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="GlassBrush" Color="#252526"/>
    <SolidColorBrush x:Key="TextBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#B0B0B0"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#4CAF50"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#F44336"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#3F3F46"/>
    
    <!-- Glass Effect Brush -->
    <LinearGradientBrush x:Key="GlassGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#1A252526" Offset="0"/>
        <GradientStop Color="#33252526" Offset="0.5"/>
        <GradientStop Color="#1A252526" Offset="1"/>
    </LinearGradientBrush>
    
</ResourceDictionary>