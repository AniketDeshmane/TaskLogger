<Application x:Class="TaskLogger.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TaskLogger.Converters"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Default to Light Theme -->
                <ResourceDictionary Source="/Themes/LightTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Modern Glass Button Style -->
            <Style x:Key="ModernButton" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                <Setter Property="Padding" Value="20,12"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Border x:Name="BackgroundBorder"
                                        Background="{TemplateBinding Background}" 
                                        CornerRadius="8"
                                        Opacity="0.9">
                                    <Border.Effect>
                                        <BlurEffect Radius="10"/>
                                    </Border.Effect>
                                </Border>
                                <Border x:Name="MainBorder"
                                        Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="8" 
                                        Padding="{TemplateBinding Padding}">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="5" ShadowDepth="2"/>
                                    </Border.Effect>
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="MainBorder" Property="Opacity" Value="0.85"/>
                                    <Setter TargetName="BackgroundBorder" Property="Opacity" Value="1"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="MainBorder" Property="Opacity" Value="0.7"/>
                                    <Setter TargetName="MainBorder" Property="RenderTransform">
                                        <Setter.Value>
                                            <TranslateTransform Y="1"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <!-- Modern Glass TextBox Style -->
            <Style x:Key="ModernTextBox" TargetType="TextBox">
                <Setter Property="Background">
                    <Setter.Value>
                        <SolidColorBrush Color="{Binding Source={StaticResource CardBrush}, Path=Color}" Opacity="0.95"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="12,8"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="CaretBrush" Value="{StaticResource PrimaryBrush}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Grid>
                                <Border x:Name="BackgroundBorder"
                                        Background="{StaticResource GlassGradientBrush}" 
                                        CornerRadius="6"
                                        Opacity="0.5"/>
                                <Border x:Name="MainBorder"
                                        Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}" 
                                        CornerRadius="6" 
                                        Padding="{TemplateBinding Padding}">
                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                </Border>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter TargetName="MainBorder" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                    <Setter TargetName="BackgroundBorder" Property="Opacity" Value="0.7"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <!-- Converters -->
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <local:BoolToColorConverter x:Key="BoolToColorConverter"/>
            <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
            <local:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
            
            <!-- Modern Glass Card Style -->
            <Style x:Key="ModernCard" TargetType="Border">
                <Setter Property="Background">
                    <Setter.Value>
                        <SolidColorBrush Color="{Binding Source={StaticResource CardBrush}, Path=Color}" Opacity="0.95"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="Padding" Value="20"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="Black" 
                                        Opacity="0.15" 
                                        BlurRadius="15" 
                                        ShadowDepth="3"/>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <!-- Toggle Button Style for Theme Switch -->
            <Style x:Key="ThemeToggleButton" TargetType="ToggleButton">
                <Setter Property="Width" Value="50"/>
                <Setter Property="Height" Value="24"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ToggleButton">
                            <Grid>
                                <Border x:Name="BackgroundBorder" 
                                        Background="{StaticResource TextSecondaryBrush}" 
                                        CornerRadius="12"
                                        Opacity="0.3"/>
                                <Border x:Name="SwitchBorder" 
                                        Background="White" 
                                        Width="20" 
                                        Height="20" 
                                        CornerRadius="10" 
                                        HorizontalAlignment="Left" 
                                        Margin="2">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="3" ShadowDepth="1"/>
                                    </Border.Effect>
                                </Border>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ThicknessAnimation Storyboard.TargetName="SwitchBorder" 
                                                                   Storyboard.TargetProperty="Margin" 
                                                                   To="28,2,2,2" 
                                                                   Duration="0:0:0.2"/>
                                                <ColorAnimation Storyboard.TargetName="BackgroundBorder" 
                                                               Storyboard.TargetProperty="Background.Color" 
                                                               To="#4A90E2" 
                                                               Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ThicknessAnimation Storyboard.TargetName="SwitchBorder" 
                                                                   Storyboard.TargetProperty="Margin" 
                                                                   To="2" 
                                                                   Duration="0:0:0.2"/>
                                                <ColorAnimation Storyboard.TargetName="BackgroundBorder" 
                                                               Storyboard.TargetProperty="Background.Color" 
                                                               To="#7F8C8D" 
                                                               Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
