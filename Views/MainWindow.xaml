<Window x:Class="TaskLogger.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Task Logger" 
        Height="550" 
        Width="650"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        ResizeMode="CanMinimize"
        StateChanged="MainWindow_StateChanged"
        Closing="MainWindow_Closing"
        ShowInTaskbar="{Binding ShowInTaskbar, RelativeSource={RelativeSource Self}, Mode=TwoWay}"
        AllowsTransparency="True"
        WindowStyle="None">
    
    <!-- Main Border with Glass Effect -->
    <Border CornerRadius="15" 
            BorderBrush="{StaticResource BorderBrush}" 
            BorderThickness="1">
        <Border.Background>
            <SolidColorBrush Color="{Binding Source={StaticResource BackgroundBrush}, Path=Color}" Opacity="0.98"/>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="20" ShadowDepth="5"/>
        </Border.Effect>
        
        <Grid>
            <!-- Title Bar -->
            <Grid Height="35" VerticalAlignment="Top" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid.Background>
                    <SolidColorBrush Color="{Binding Source={StaticResource CardBrush}, Path=Color}" Opacity="0.5"/>
                </Grid.Background>
                <Grid Margin="15,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ“" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Task Logger" FontSize="14" FontWeight="SemiBold" 
                                 Foreground="{StaticResource TextBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <!-- Theme Toggle -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,15,0">
                            <TextBlock Text="â˜€ï¸" FontSize="12" Margin="0,0,5,0" VerticalAlignment="Center"/>
                            <ToggleButton x:Name="ThemeToggle" 
                                        Style="{StaticResource ThemeToggleButton}"
                                        IsChecked="{Binding IsDarkMode}"
                                        Click="ThemeToggle_Click"/>
                            <TextBlock Text="ðŸŒ™" FontSize="12" Margin="5,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <!-- Window Controls -->
                        <Button Content="â”€" Width="30" Height="25" 
                               Background="Transparent" BorderThickness="0" 
                               Foreground="{StaticResource TextBrush}"
                               Click="MinimizeButton_Click" Cursor="Hand"/>
                        <Button Content="âœ•" Width="30" Height="25" 
                               Background="Transparent" BorderThickness="0" 
                               Foreground="{StaticResource TextBrush}"
                               Click="CloseButton_Click" Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Grid>
            
            <Grid Margin="20,45,20,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource ModernCard}" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="ðŸ“ Task Logger" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="{StaticResource PrimaryBrush}"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,8"/>
                <TextBlock Text="Log your daily tasks and notes" 
                          FontSize="14" 
                          Foreground="{StaticResource TextSecondaryBrush}"
                          HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <Border Grid.Row="1" Style="{StaticResource ModernCard}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Date Display -->
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="{Binding DateText}" 
                              FontSize="16" 
                              FontWeight="SemiBold" 
                              Foreground="{StaticResource TextBrush}"
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="It's the weekend! Take a break and enjoy your time off! ðŸŽ‰" 
                              FontSize="12" 
                              Foreground="{StaticResource ErrorBrush}"
                              HorizontalAlignment="Center"
                              Margin="0,5,0,0"
                              Visibility="{Binding IsWeekend, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>
                
                <!-- Task Input -->
                <StackPanel Grid.Row="1">
                    <TextBlock Text="What did you accomplish today?" 
                              FontSize="14" 
                              FontWeight="SemiBold" 
                              Foreground="{StaticResource TextBrush}"
                              Margin="0,0,0,10"/>
                    <TextBox x:Name="TaskTextBox"
                            Style="{StaticResource ModernTextBox}"
                            TextWrapping="Wrap"
                            AcceptsReturn="False"
                            VerticalScrollBarVisibility="Auto"
                            MinHeight="120"
                            MaxHeight="200"
                            FontSize="14"
                            Text="{Binding TaskText, UpdateSourceTrigger=PropertyChanged}"
                            KeyDown="TaskTextBox_KeyDown"/>
                </StackPanel>
                
                <!-- Buttons -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" 
                           HorizontalAlignment="Right" 
                           Margin="0,20,0,0">
                    <Button Content="ðŸ’¾ Save Task" 
                           Style="{StaticResource ModernButton}"
                           Command="{Binding SaveTaskCommand}"
                           Margin="0,0,10,0"/>
                    <Button Content="ðŸ“‹ View History" 
                           Style="{StaticResource ModernButton}"
                           Command="{Binding ViewHistoryCommand}"
                           Background="{StaticResource SecondaryBrush}"
                           Margin="0,0,10,0"/>
                    <Button Content="âš™ï¸ Settings" 
                           Style="{StaticResource ModernButton}"
                           Command="{Binding OpenSettingsCommand}"
                           Background="{StaticResource AccentBrush}"
                           Margin="0,0,10,0"/>
                    <Button Content="ðŸ› Debug Logs" 
                           Style="{StaticResource ModernButton}"
                           Click="DebugLogsButton_Click"
                           Background="#95A5A6"
                           ToolTip="View application debug logs"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{StaticResource CardBrush}" 
                CornerRadius="6" 
                Padding="15,8" 
                Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal">
                <Ellipse Width="8" 
                        Height="8" 
                        Fill="{Binding IsStatusSuccess, Converter={StaticResource BoolToColorConverter}}" 
                        Margin="0,0,8,0"/>
                <TextBlock Text="{Binding StatusText}" 
                          FontSize="12" 
                          Foreground="{StaticResource TextSecondaryBrush}"/>
            </StackPanel>
        </Border>
    </Grid>
        </Grid>
    </Border>
</Window>
