<Window x:Class="TaskLogger.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" 
        Height="400" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource ModernCard}" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="⚙️ Settings" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="{StaticResource PrimaryBrush}"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,8"/>
                <TextBlock Text="Configure Task Logger preferences" 
                          FontSize="14" 
                          Foreground="{StaticResource TextSecondaryBrush}"
                          HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Settings Content -->
        <Border Grid.Row="1" Style="{StaticResource ModernCard}">
            <StackPanel>
                <!-- Startup Settings -->
                <GroupBox Header="Startup Settings" 
                         FontWeight="SemiBold" 
                         Foreground="{StaticResource TextBrush}"
                         Margin="0,0,0,20">
                    <StackPanel Margin="10">
                        <CheckBox Content="Start Task Logger with Windows" 
                                 FontSize="14"
                                 IsChecked="{Binding IsStartupEnabled, Mode=TwoWay}"
                                 Margin="0,0,0,10"/>
                        <TextBlock Text="Automatically launch Task Logger when Windows starts" 
                                  FontSize="12" 
                                  Foreground="{StaticResource TextSecondaryBrush}"
                                  TextWrapping="Wrap"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Notification Settings -->
                <GroupBox Header="Notification Settings" 
                         FontWeight="SemiBold" 
                         Foreground="{StaticResource TextBrush}"
                         Margin="0,0,0,20">
                    <StackPanel Margin="10">
                        <CheckBox Content="Show weekend notifications" 
                                 FontSize="14"
                                 IsChecked="{Binding ShowWeekendNotifications, Mode=TwoWay}"
                                 Margin="0,0,0,10"/>
                        <TextBlock Text="Display friendly weekend messages when logging is disabled" 
                                  FontSize="12" 
                                  Foreground="{StaticResource TextSecondaryBrush}"
                                  TextWrapping="Wrap"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Data Settings -->
                <GroupBox Header="Data Settings" 
                         FontWeight="SemiBold" 
                         Foreground="{StaticResource TextBrush}">
                    <StackPanel Margin="10">
                        <TextBlock Text="Database location:" 
                                  FontSize="14" 
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,5"/>
                        <TextBox Style="{StaticResource ModernTextBox}"
                                IsReadOnly="True"
                                Text="{Binding LogFilePath}"
                                Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal">
                            <Button Content="📁 Open Database Folder" 
                                   Style="{StaticResource ModernButton}"
                                   Command="{Binding OpenLogFolderCommand}"
                                   Background="{StaticResource SecondaryBrush}"
                                   Margin="0,0,10,0"/>
                            <Button Content="⚙️ Change Location" 
                                   Style="{StaticResource ModernButton}"
                                   Command="{Binding ChangeDatabaseLocationCommand}"
                                   Background="{StaticResource AccentBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </Border>
        
        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                   HorizontalAlignment="Right" 
                   Margin="0,20,0,0">
            <Button Content="💾 Save Settings" 
                   Style="{StaticResource ModernButton}"
                   Command="{Binding SaveSettingsCommand}"
                   Margin="0,0,10,0"/>
            <Button Content="Cancel" 
                   Style="{StaticResource ModernButton}"
                   Click="CancelButton_Click"
                   Background="{StaticResource SecondaryBrush}"/>
        </StackPanel>
    </Grid>
</Window>
