<Window x:Class="TaskLogger.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" 
        Height="500" 
        Width="550"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStyle="None">
    
    <!-- Main Border with Glass Effect -->
    <Border CornerRadius="15" 
            BorderBrush="{StaticResource BorderBrush}" 
            BorderThickness="1">
        <Border.Background>
            <SolidColorBrush Color="{Binding Source={StaticResource BackgroundBrush}, Path=Color}" Opacity="0.98"/>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="20" ShadowDepth="5"/>
        </Border.Effect>
        
        <Grid>
            <!-- Title Bar -->
            <Grid Height="35" VerticalAlignment="Top" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid.Background>
                    <SolidColorBrush Color="{Binding Source={StaticResource CardBrush}, Path=Color}" Opacity="0.5"/>
                </Grid.Background>
                <Grid Margin="15,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <TextBlock Text="âš™ï¸" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Settings" FontSize="14" FontWeight="SemiBold" 
                                 Foreground="{StaticResource TextBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button Content="âœ•" Width="30" Height="25" 
                           Background="Transparent" BorderThickness="0" 
                           Foreground="{StaticResource TextBrush}"
                           Click="CloseButton_Click" Cursor="Hand"
                           HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </Grid>
            </Grid>
            
    <Grid Margin="20,45,20,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource ModernCard}" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="âš™ï¸ Settings" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="{StaticResource PrimaryBrush}"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,8"/>
                <TextBlock Text="Configure Task Logger preferences" 
                          FontSize="14" 
                          Foreground="{StaticResource TextSecondaryBrush}"
                          HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Settings Content -->
        <Border Grid.Row="1" Style="{StaticResource ModernCard}">
            <StackPanel>
                <!-- Startup Settings -->
                <GroupBox Header="Startup Settings" 
                         FontWeight="SemiBold" 
                         Foreground="{StaticResource TextBrush}"
                         Margin="0,0,0,20">
                    <StackPanel Margin="10">
                        <CheckBox Content="Start Task Logger with Windows" 
                                 FontSize="14"
                                 IsChecked="{Binding IsStartupEnabled, Mode=TwoWay}"
                                 Margin="0,0,0,10"/>
                        <TextBlock Text="Automatically launch Task Logger when Windows starts" 
                                  FontSize="12" 
                                  Foreground="{StaticResource TextSecondaryBrush}"
                                  TextWrapping="Wrap"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Notification Settings -->
                <GroupBox Header="Notification Settings" 
                         FontWeight="SemiBold" 
                         Foreground="{StaticResource TextBrush}"
                         Margin="0,0,0,20">
                    <StackPanel Margin="10">
                        <CheckBox Content="Show weekend notifications" 
                                 FontSize="14"
                                 IsChecked="{Binding ShowWeekendNotifications, Mode=TwoWay}"
                                 Margin="0,0,0,10"/>
                        <TextBlock Text="Display friendly weekend messages when logging is disabled" 
                                  FontSize="12" 
                                  Foreground="{StaticResource TextSecondaryBrush}"
                                  TextWrapping="Wrap"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Data Settings -->
                <GroupBox Header="Data Settings" 
                         FontWeight="SemiBold" 
                         Foreground="{StaticResource TextBrush}"
                         Margin="0,0,0,20">
                    <StackPanel Margin="10">
                        <TextBlock Text="Database location:" 
                                  FontSize="14" 
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" 
                                    Style="{StaticResource ModernTextBox}"
                                    IsReadOnly="True"
                                    Text="{Binding DatabasePath}"
                                    Margin="0,0,10,0"/>
                            <Button Grid.Column="1" 
                                   Content="ðŸ“" 
                                   Width="35"
                                   Style="{StaticResource ModernButton}"
                                   Command="{Binding BrowseDatabaseCommand}"
                                   Background="{StaticResource AccentBrush}"
                                   ToolTip="Browse for database location"/>
                        </Grid>
                        <TextBlock Text="Note: Changing database location will require restart" 
                                  FontSize="11" 
                                  Foreground="{StaticResource TextSecondaryBrush}"
                                  FontStyle="Italic"
                                  Margin="0,5,0,10"/>
                        <StackPanel Orientation="Horizontal">
                            <Button Content="ðŸ“‚ Open Database Folder" 
                                   Style="{StaticResource ModernButton}"
                                   Command="{Binding OpenDatabaseFolderCommand}"
                                   Background="{StaticResource SecondaryBrush}"
                                   Margin="0,0,10,0"/>
                            <Button Content="ðŸ”„ Reset to Default" 
                                   Style="{StaticResource ModernButton}"
                                   Command="{Binding ResetDatabaseLocationCommand}"
                                   Background="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                
                <!-- Theme Settings -->
                <GroupBox Header="Appearance" 
                         FontWeight="SemiBold" 
                         Foreground="{StaticResource TextBrush}">
                    <StackPanel Margin="10">
                        <CheckBox Content="Enable Dark Mode" 
                                 FontSize="14"
                                 IsChecked="{Binding IsDarkMode, Mode=TwoWay}"
                                 Margin="0,0,0,10"/>
                        <TextBlock Text="Switch between light and dark themes" 
                                  FontSize="12" 
                                  Foreground="{StaticResource TextSecondaryBrush}"
                                  TextWrapping="Wrap"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </Border>
        
        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                   HorizontalAlignment="Right" 
                   Margin="0,20,0,0">
            <Button Content="ðŸ’¾ Save Settings" 
                   Style="{StaticResource ModernButton}"
                   Command="{Binding SaveSettingsCommand}"
                   Margin="0,0,10,0"/>
            <Button Content="Cancel" 
                   Style="{StaticResource ModernButton}"
                   Click="CancelButton_Click"
                   Background="{StaticResource SecondaryBrush}"/>
        </StackPanel>
    </Grid>
        </Grid>
    </Border>
</Window>
